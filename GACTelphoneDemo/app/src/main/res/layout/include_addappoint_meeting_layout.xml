<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent" android:orientation="horizontal"
    android:layout_height="@dimen/actionBar_height" android:paddingLeft="@dimen/addmeeting_paddingleft"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:layout_width="0dp" android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" android:text="@string/meeingname"
        android:layout_weight="5"/>
    <EditText
        android:id="@+id/addmeeting_name_edit" android:layout_width="0dp"
        android:layout_height="@dimen/data_edit_height" android:layout_weight="5"
        android:background="@drawable/add_edit_bg" android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/total_text" android:layout_width="0dp"
        android:layout_height="wrap_content" android:textColor="@color/gray"
        android:layout_weight="1" android:textSize="@dimen/peopletotal_size"
        android:layout_gravity="center_vertical" android:text="@string/people_total"
        android:gravity="center"/>
</LinearLayout>
