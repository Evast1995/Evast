<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:id="@+id/tilte_text" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textStyle="bold"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/local_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_below="@id/tilte_text"/>
    <ImageView
        android:id="@+id/call_head" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_below="@id/local_name" android:src="@mipmap/calling_default_pic"/>
    <TextView
        android:id="@+id/remote_num" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_below="@id/call_head"/>
    <LinearLayout
        android:layout_width="wrap_content" android:orientation="horizontal"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_below="@id/remote_num">
        <Button
            android:id="@+id/add_meeting" android:layout_width="@dimen/hangup_btn_width"
            android:layout_height="wrap_content" android:text="@string/add_meeting"/>
        <Button
            android:id="@+id/reject" android:layout_width="@dimen/hangup_btn_width"
            android:layout_height="wrap_content" android:text="@string/hang_up"/>
    </LinearLayout>
</RelativeLayout>
