<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/template_image" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="1"
        android:layout_gravity="center_vertical" android:padding="@dimen/account_image_padding"/>
    <LinearLayout
        android:layout_width="0dp" android:orientation="vertical"
        android:layout_height="match_parent" android:layout_gravity="center_vertical"
        android:layout_weight="3" android:gravity="center_vertical">
        <TextView
            android:id="@+id/text_one" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/white"/>
        <TextView
            android:id="@+id/text_two" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
