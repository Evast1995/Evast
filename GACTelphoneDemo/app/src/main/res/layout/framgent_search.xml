<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent" android:background="@color/halftransparent"
        android:layout_height="wrap_content" android:id="@+id/head_layout">
        <ImageView
            android:layout_width="@dimen/search_item_image_dimen" android:src="@mipmap/conf_incoming_default_pic"
            android:layout_height="@dimen/search_item_image_dimen" android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/search_item_image_marginleft" android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/search_phoneTv" android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <ListView
        android:id="@+id/search_list" android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_marginTop="@dimen/stroken_height"/>
</LinearLayout>
