<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/base_mainbody" style="@style/layout_fill"/>
    <com.evast.evastcore.widget.ErrorLayout
        android:id="@+id/base_errorbody" android:layout_width="match_parent"
        android:layout_height="match_parent" android:visibility="gone"
        android:background="@color/white"/>
    <com.pnikosis.materialishprogress.ProgressWheel android:id="@+id/base_wheel_loading"
        android:layout_width="75dp" android:layout_height="75dp"
        android:layout_centerInParent="true" android:layout_gravity="center"
        wheel:matProg_barColor="?attr/colorPrimary" android:visibility="gone"
        wheel:matProg_progressIndeterminate="true" wheel:matProg_spinSpeed="1.2" />
</RelativeLayout>
