<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="10dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="60dp" android:text="用户名 :"
            android:layout_height="wrap_content" android:textColor="@color/black"
            android:gravity="end"/>
        <EditText
            android:id="@+id/username_edit" android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="10dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="60dp" android:text="密码 :"
            android:layout_height="wrap_content" android:textColor="@color/black"
            android:gravity="end"/>
        <EditText
            android:id="@+id/password_edit" android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="10dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="60dp" android:text="电话 :"
            android:layout_height="wrap_content" android:textColor="@color/black"
            android:gravity="end"/>
        <EditText
            android:id="@+id/phone_edit" android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="10dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="60dp" android:text="邮箱 :"
            android:layout_height="wrap_content" android:textColor="@color/black"
            android:gravity="end"/>
        <EditText
            android:id="@+id/email_edit" android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="10dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="60dp" android:text="地址 :"
            android:layout_height="wrap_content" android:textColor="@color/black"
            android:gravity="end"/>
        <EditText
            android:id="@+id/address_edit" android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/authcode_but" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="获取验证码" />
        <EditText
            android:id="@+id/authcode_eidt" android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/register_but" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
        android:text="注册"/>
</LinearLayout>
